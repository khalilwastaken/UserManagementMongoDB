<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <% if (users.length > 0) { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                              <tr class="align-middle">
                                <td class="text-center"><%= index + 1 %></td>
                                <td class="text-center"><img src="/uploads/<%= row.image %>" width="50" class="img-thumbnail" /></td>
                                <td><%= row.name %></td>
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td class="text-center">
                                  <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                  <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                              </tr>
                            <% }) %>
                          </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
