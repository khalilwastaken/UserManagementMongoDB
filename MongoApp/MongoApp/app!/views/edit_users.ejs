<%- include('layout/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success" style="background-color: #520bac;">
          <h3 class="text-light" style="color: #FFFFFF;">Edit User (<%= user.name %>)</h3>
        </div>
        <div class="card-body p-4">
          <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name" style="color: #333333;">Name</label>
              <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" value="<%= user.name %>" required style="border-color: #520bac;" />
            </div>
            <div class="mb-3">
              <label for="email" style="color: #333333;">Email</label>
              <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" value="<%= user.email %>" required style="border-color: #520bac;" />
            </div>
            <div class="mb-3">
              <label for="phone" style="color: #333333;">Phone</label>
              <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter phone" value="<%= user.phone %>" required style="border-color: #520bac;" />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label" style="color: #333333;">Select Image</label>
              <input class="form-control form-control-lg" type="file" name="image"  style="border-color: #520bac;" />
              <img src="<%= user.image %>" width="100" class="img-thumbnail mt-1">
            </div>
            <input type="hidden" name="old_image" value ="<%= user.image %>">
            <div class="mb-3 d-grid">
              <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg" style="background-color: #520bac; border-color: #520bac;" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
